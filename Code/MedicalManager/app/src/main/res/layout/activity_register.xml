<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.nicky.medicalmanager.Startup.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="#0000ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As Patient?"
        android:id="@+id/patientButton"
        android:textSize="15sp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:background="#0000ff"
        android:onClick="patientButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As Doctor?"
        android:id="@+id/doctorButton"
        android:textSize="15sp"
        android:layout_below="@+id/patientButton"
        android:layout_alignRight="@+id/patientButton"
        android:layout_alignEnd="@+id/patientButton"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:background="#0000ff"
        android:onClick="doctorButtonClicked" />
</RelativeLayout>
